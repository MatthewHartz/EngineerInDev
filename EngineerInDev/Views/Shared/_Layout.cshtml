<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <base href="/">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel='stylesheet prefetch' href='http://netdna.bootstrapcdn.com/font-awesome/4.0.0/css/font-awesome.min.css'>
    <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Arvo">
    <script src="//code.jquery.com/jquery-1.11.0.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.1/angular.min.js"></script>
    <script src="https://code.angularjs.org/1.3.11/angular-route.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script src="~/Content/Scripts/app.js"></script>
    @Styles.Render("~/Content/Css")
    @Scripts.Render("~/Content/Scripts/Controllers")
    @Scripts.Render("~/Content/Scripts/Plugins")
    @Scripts.Render("~/Content/Scripts/Directives")
    @Scripts.Render("~/Content/Scripts/Filters")
</head>
<body ng-app="engineerBlog" ng-controller="HeaderCtrl" scroll>
    <div id="Navbar">
        <div id="Header">
            <div id="ImageCropper" ng-class="atTop || atTop == null ? 'animate-top' : 'animate-scroll'">
                <img src="~/Content/Images/Profile.jpg" id="ProfilePic" />
            </div>
            <h1 id="Title">
                <a target="_self" href="/">Engineer In Dev</a>
            </h1>
        </div>
        <div>
            <div class="social-wrapper">
                <a class="fa fa-github fa-3x" href="https://github.com/rvbmrdonut"></a>
                <a class="fa fa-linkedin fa-3x"></a>
                <a class="fa fa-twitter fa-3x"></a>
            </div>
            <ul id="NavbarOptions">
                <li><a target="_self" href="About">about</a></li>
                <li><a target="_self" href="Contact">contact</a></li>
                <li><a target="_self" href="Past">past</a></li>
            </ul>
            <form class="search-wrapper" ng-submit="search()">
                <input type="text" ng-model="searchText" class="form-control search-box" placeholder="Search blogs">
                <span class="glyphicon glyphicon-search search-icon" aria-hidden="true"></span>
            </form>
        </div>
        <div id="CopyRight">&copy; @DateTime.Now.Year - Matthew Hartz</div>
    </div>
    <div class="fixed-navbar" ng-show="!atTop && atTop != null" ng-cloak>
        <div class="social-wrapper">
            <a class="fa fa-github fa-3x" href="https://github.com/rvbmrdonut"></a>
            <a class="fa fa-linkedin fa-3x"></a>
            <a class="fa fa-twitter fa-3x"></a>
        </div>
        <ul id="NavbarOptions">
            <li><a target="_self" href="About">about</a></li>
            <li><a target="_self" href="Contact">contact</a></li>
            <li><a target="_self" href="Past">past</a></li>
        </ul>
        <form class="search-wrapper" ng-submit="search()">
            <input type="text" ng-model="searchText" class="form-control search-box" placeholder="Search blogs">
            <span class="glyphicon glyphicon-search search-icon" aria-hidden="true"></span>
        </form>
    </div>
    <div id="Content">
        @RenderBody()
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
